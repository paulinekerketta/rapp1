<p id="notice"><%= notice %></p>

<h1>Dailycashes</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sale</th>
      <th>Visa</th>
      <th>Discount</th>
      <th>Cashpurchase</th>
      <th>Onlinepaidorder</th>
      <th>Totaldriverpayout</th>
      <th>Banklodgment</th>
      <th>Overunder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% running_total = 0 %>
    <% @dailycashes.each do |dailycash| %>
      <tr>
        <td><%= dailycash.date %></td>
        <td><%= dailycash.sale %></td>
        <td><%= dailycash.visa %></td>
        <td><%= dailycash.discount %></td>
        <td><%= dailycash.cashpurchase %></td>
        <td><%= dailycash.onlinepaidorder %></td>
        <td><%= dailycash.totaldriverpayout %></td>
        <td><%= dailycash.banklodgment %></td>
        <td><%= dailycash.sale - (dailycash.visa + dailycash.discount + dailycash.cashpurchase + dailycash.onlinepaidorder + dailycash.totaldriverpayout + dailycash.banklodgment )%></td>
        <td><%= link_to 'Show', dailycash %></td>
        <td><%= link_to 'Edit', edit_dailycash_path(dailycash) %></td>
        <td><%= link_to 'Destroy', dailycash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

